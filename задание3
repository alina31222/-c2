#include <stdio.h>

int main() {
    
  printf("  |"); // Decorations
  for (int i = 1; i <= 9; i++) { // Horizontal line for matrix
    printf(" %2d", i);} // %2d using for alingment
  
  printf("\n"); // Decorations
  printf("--+"); // Decorations
  for (int i = 1; i <= 9; i++) { // Writing line to separate parts
    printf("---");
  }
  printf("\n");


  for (int i = 1; i <= 9; i++) {
    printf("%2d|", i); // Vertical line with alingment
    for (int j = 1; j <= 9; j++) {
      printf(" %2d", i * j); // Main process of multiplication table
    }
    printf("\n");
  }
  
    return 0;
}
