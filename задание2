#include <stdio.h>

int main() {
    // Getting the size of tree
    int x;
    printf("Enter how big is your spruce: ");
    scanf("%d", &x);
    
    // Main code
    for (int i = 1; i <= x; i++) {
        for (int j = 1; j <= x - i; j++) { // Loop for spacing from begin of line
            printf(" "); 
        }
        for (int k = 1; k <= 2 * i - 1; k++) { // Loop for how much * should be 
            printf("*"); // Spruce base
        }
        printf("\n"); // Jump to next line
    }
    for (int i = 1; i <= x - 1; i++) {
        printf(" ");} // Space for spruce trunk
        
        printf("*\n"); // Spruce trunk
        
    return 0;
}
